<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SleepActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sleep" />

    <EditText
        android:id="@+id/txtSleepTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/btnStartSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start sleep" />

    <Button
        android:id="@+id/btnStopSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wake up" />


    <Button
        android:id="@+id/btnAddSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add sleep" />


</androidx.appcompat.widget.LinearLayoutCompat>